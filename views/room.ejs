<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <script>
        const ROOM_ID = "<%= roomId %>"
    </script>
    <title>Video Chat App</title>
</head>

<body>
    
    <div class="main">
        <div class="main__left">
            <div id="temp-message">
            </div>
            <div class="main__videos">
                <div id = "video-grid">
                </div>
            </div>
            <div class="main__controls">

                <div class="main__controls__block">
                    <div class="main__controls__button">
                        <i class="fas fa-user-plus fa-2x"></i>
                        <span> Invite People</span> 
                    </div>
                </div>

                <div class="main__controls__block">
                    <div onclick="muteUnmute()" class="main__controls__button mute-button">
                        <i class="fas fa-microphone fa-2x"></i>
                        <span>  Mute </span>
                    </div>
                    <div onclick="playStop()" class="main__controls__button video-button">
                        <i class="fas fa-video fa-2x"></i>
                        <span> Stop Video</span>
                    </div>
                    <div class="main__controls__button">
                        <i class="fas fa-arrow-up fa-2x screen-share-icon"></i>
                        <span> Share Screen </span>
                    </div>
                    <div class="main__controls__button">
                        <i class=" hang-up fas fa-sign-out-alt fa-2x"></i>
                        <span> Hang Up</span>
                    </div>
                </div>

                <div class="main__controls__block">
                    <div class="main__controls__button">
                        <i class="fas fa-comments fa-2x"></i>
                        <span> Chat</span>
                    </div>
                    <div class="main__controls__button">
                        <i class="fas fa-users fa-2x"></i>
                        <span> Participants</span>
                    </div>
                </div>

            </div>
        </div>

        <!-- Right Pane of Chat -->
        <div class="main__right">
            <div class="main__header">
                <h2>Chat</h2>
            </div>
            <div class="main__chat_window">
                <div id="display-messages">
                </div>
            </div>
            <div class="main__messages_container">
                <form id="message-form">
                    <input name="messageInput" type="text" placeholder="Type message here..."/>
                    <button type="submit"> Send </button>
                </form>
            </div>
        </div>

    </div>
    
    <!-- Custom Templates -->
    <script id="temp-msg-template" type="text/html">
        <div class="temp-message">
            {{userId}} has Joined the room.
        </div>
    </script>

    <script id="message-template" type="text/html">
        <div class="message">
            <p>
                <span class="message__name"> {{userId}} </span>
                <span class="message__meta"> {{createdAt}} </span>
            </p>
            <p> {{message}} </p>
        </div>
    </script>

    <script src="https://unpkg.com/mustache@latest"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.7.0/moment.min.js" type="text/javascript"></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="/js/script.js" defer> </script>
</body>
</html>